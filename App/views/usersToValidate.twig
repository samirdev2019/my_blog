{% extends "accountTemplate.twig" %}

  

    {% block content %}
    
    {% if users %}
        {% if message %}
            <p class="alert alert-{{ type }}">{{ message }}</p>
        {% endif %}
        <table class="table table-striped table-responsive-md">
            <thead>
                <tr>
                    <th scope="col">pseudonyme</th>
                    <th scope="col">email</th>
                    <th scope="col">date inscription</th>
                    <th scope="col">validation</th>
                </tr>
            </thead>
            <tbody>
        {% for user in users %}
                <tr>
                    <th scope="row">{{ user.username}}</th>
                    <td>{{ user.email }}</td>
                    <td>{{ user.registred}}</td>
                    <td><a class="btn btn-success btn-sm" href="index.php?p=manageUser&amp;id={{user.user_id }}">valider</a></td>
                </tr>
        {% endfor %}
        </tbody>
        </table>
    {% else %}
        <p class="alert alert-info">Tous les utilisateurs sont actuellement valid√©s</p>
    {% endif %}
    {% endblock %}
    {% block footer %}
    {{ parent() }}
    {% endblock %}
        
   