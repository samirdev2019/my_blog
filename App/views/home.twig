{% extends 'layout.twig' %}
{% block navbar %}
{% if session.user_id is empty %}
{{ parent() }}
{% elseif session %}
{% include "navAcount.php" %}
{% endif %}
{% endblock %}

{% block Breadcrumb %}
  <!-- Masthead -->
  <header class="masthead">
    <div class="container h-100">
      <div class="row h-100 align-items-center justify-content-center text-center">
        <div class="col-lg-10 align-self-end">
          <h1 class="text-uppercase text-white font-weight-bold">Développeur d'application PHP/Symfony</h1>
          <hr class="divider my-4">
        </div>
        <div class="col-lg-8 align-self-baseline">
          <p class="text-white-75 font-weight-light mb-5">le développeur qu'il vous faut, disposant des connaissances techniques et des bonnes pratiques pour animer et mener vers le succès votre projet. 
                 !</p>
          <a class="btn btn-primary btn-xl js-scroll-trigger" href="#about">En savoir plus</a>
        </div>
      </div>
    </div>
  </header>
{% endblock %}
{% block content %}
{% block presentation %}
<section class="page-section bg-primary" id="about">
    <div class="container">
      <div class="row justify-content-center">
        <div class="col-lg-8 text-center">
          <h2 class="text-white mt-0">Un aperçu général sur ma carrière</h2>
          <hr class="divider light my-4">
          <div class=" mb-4 d-flex justify-content-center">
            <img class="imglogo mx-2 figure-img img-fluid rounded-circle" src="../public/img/php.png" alt="logo php">
            <img class="imglogo mx-2 figure-img img-fluid rounded-circle" src="../public/img/symfony.png" alt="logo symfony">
            <img class="imglogo mx-2 figure-img img-fluid rounded-circle" src="../public/img/botstrap.png" alt="logo botstrap">
            <img class="imglogo mx-2 figure-img img-fluid rounded-circle" src="../public/img/css3.jpg" alt="logo htmlcss">
            <img class="imglogo mx-2 figure-img img-fluid rounded-circle" src="../public/img/html.jpg" alt="logo htmlcss">
            <img class="imglogo mx-2 figure-img img-fluid rounded-circle" src="../public/img/wordpress.jpg" alt="logo htmlcss">
           
          </div>
          <a class="btn btn-light btn-xl js-scroll-trigger" href="../public/files/myCV.pdf" target="_blank">voir mon CV!</a>
        </div>
      </div>
    </div>
  </section>
  {% endblock %}
  {% block contact %}
  <section class="page-section "  >
      <div class="container bg-light" id="contact" >
        <div class="row justify-content-center">
          <div class="col-lg-8 text-center">
            <h2 class="mt-0">Entrons en contact!</h2>
            <hr class="divider my-2">
            <p class="text-muted mb-2">prêt à lancer votre projet ? ou pour une simple question!, n'hésitez pas à me contacter,je vous réponderais le plus tôt possible!</p>
          </div>
        </div>
        {% if errors is not empty %}
{% for error in errors %}
<div class="alert alert-danger">
  {{ error }}
</div>
{% endfor %}
{% else %}
<div class="alert alert-success">
<p>{{ succes }} </p>
</div>
{% endif %}
        
        
    <div class="row">
      <form class=" mx-auto  mb-5" action="index.php" method="post">
        <p>
          <label class="d-block mb-0" for="username">Nom :</label>
          <input  type="text" name="username" value="{{ username }}" id="username">
        </p>  
        <p>
          <input type="hidden" name="p" value="contact">
        </p>
        <p>
          <label class="d-block mb-0" for="email">Email :</label>
          <input  type="email" name="email" value="{{ email }}" id="email" >
        </p>
        <p>
          <label class="d-block mb-0" for="message">Message :</label>
          <textarea  name="message" rows="8" cols="45" id="message">{{ message }}</textarea>
        </p>
        <p>
          <input type="submit" name="btn" value="Envoyer" class="btn btn-primary">
        </p>

      </form>
    </div>
  </div>
</section>
    {% endblock %}
  {% endblock %}
