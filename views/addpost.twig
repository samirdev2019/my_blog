{% extends "accountTemplate.twig" %}

  

    {% block content %}
    <h2>ajouter un article</h2>
    <form class="form-signin form-controller mb-5" action="index.php?p=managePost&amp;action=addPost" method="post">
          
             {% if message %}
              <p class="alert alert-{{ type }}">{{ message }}</p>
            {% endif %}
            {% if type == "danger" or type =="info" %} 
            <div class="form-group">
              <label class="d-block text-left" for="title">titre<span class="text-danger">*</span></label>
              <input type="text" name="title" class="form-control" id="title" aria-describedby="titleHelp" placeholder="titre">
            </div>
            <div class="form-group">
              <label class="d-block text-left" for="chapo">Ch√¢po<span class="text-danger">*</span></label>
              <input type="text" name="chapo" class="form-control" id="chapo" placeholder="chapo">
            </div>
            <div class="form-group">
                <label class="d-block text-left" for="author">Auteur<span class="text-danger">*</span></label>
                <input type="text" name="author" class="form-control" id="author" placeholder="Auteur">
            </div>
            <div class="form-group">
                <label class="d-block text-left" for="content">Contenu<span class="text-danger">*</span></label>
                <textarea name="content" class="form-control" id="content" cols="45" rows="6">Contenu</textarea>
            </div>
            <div><input type="hidden" name="id_user" value="{{session.user_id}}"></div>
            
            <button class="btn btn-lg btn-primary btn-block" type="submit" name="managePost">ajouter</button>
            
          </form>
          {% endif %}
    {% endblock %}
        
   