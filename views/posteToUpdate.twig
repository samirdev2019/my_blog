{% extends "accountTemplate.twig" %}

  

    {% block content %}
    <h2>modification de l'article : N° : {{ post.post_id }}</h2>
    <p>dernière modification effectué le &nbsp;&nbsp;<em>{{ post.update_date }}</em></p>
    <form class="form-signin form-controller mb-5" action="index.php?p=managePost&amp;action=updatePost" method="post">
          
             {% if message %}
              <p class="alert alert-{{ type }}">{{ message }}</p>
            {% endif %}
            {% if type == "danger" or type =="info" %} 
            <div class="form-group">
              <label class="d-block text-left" for="title">titre<span class="text-danger">*</span></label>
              <input type="text" name="title" class="form-control" id="title" aria-describedby="titleHelp" value="{{ post.title }}">
            </div>
            <div class="form-group">
              <label class="d-block text-left" for="chapo">Châpo<span class="text-danger">*</span></label>
              <input type="text" name="chapo" class="form-control" id="chapo" value="{{ post.chapo }}">
            </div>
            <div class="form-group">
                <label class="d-block text-left" for="author">Auteur<span class="text-danger">*</span></label>
                <input type="text" name="author" class="form-control" id="author" value="{{ post.author }}">
            </div>
            <div class="form-group">
                <label class="d-block text-left" for="content">Contenu<span class="text-danger">*</span></label>
                <textarea name="content" class="form-control" id="content" cols="45" rows="6">{{ post.content }}"</textarea>
            </div>
            <div><input type="hidden" name="post_id" value="{{ post.post_id }}"></div>
            
            <button class="btn btn-lg btn-primary btn-block" type="submit" name="managePost">Modifier</button>
            
          </form>
          {% endif %}
    {% endblock %}
        
   